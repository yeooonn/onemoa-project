<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bitcamp.onemoaproject.dao.QnaDao">

  <resultMap type="qna" id="qnaMap">
    <id column="qnano" property="no"/>
    <result column="title" property="title"/>
    <result column="cont" property="content"/>
    <result column="cdt" property="createdDate"/>
    <result column="answer" property="answer"/>
    <result column="answercdt" property="answerCdt"/>

    <association property="category" javaType="qnacategory">
      <id column="qnacno" property="no"/>
      <result column="qcname" property="name"/>
    </association>

    <association property="writer" javaType="member">
      <id column="mno" property="no"/>
      <result column="name" property="name"/>
    </association>

    <collection property="attachedFiles" ofType="attachedFile">
      <id column="qnafno" property="no"/>
      <result column="fname" property="filename"/>
      <result column="fpath" property="filepath"/>
    </collection>
  </resultMap>

  <!-- 새로운 리절트 맵이다. 변수를 담을 수 있는 수납함
  (resultMap) qna, no 클래스 느낌. 담을수 있는 서랍임.
  -->
  <resultMap type="attachedFile" id="attachedFileMap">
    <id column="qnafno" property="no"/>
    <result column="fname" property="filename"/>
    <result column="fpath" property="filepath"/>
    <result column="qnano" property="qnaNo"/>
  </resultMap>

    <select id="findAll" resultMap="qnaMap">
    select
      q.qnano,
      q.title,
      q.cont,
      q.cdt,
      q.answer,
      q.answerCdt,
      m.mno,
      m.name
    from
      qna q
      join member m on q.mno = m.mno
    order by
      qnano desc
  </select>

    <select id="findByNo" resultMap="qnaMap">
      select
        q.qnano,
        q.qnacno,
        q.title,
        q.cont,
        q.cdt,
        q.answer,
        q.answercdt,
        m.mno,
        m.name,
        qf.qnafno,
        qf.fpath,
        qc.name as qcname
      from
        qna q
        join member m on q.mno = m.mno
        join qna_category qc on qc.qnacno = q.qnacno
        left outer join qna_file qf on q.qnano = qf.qnano
      where
        q.qnano=#{value}
  </select>

  <select id="findFilesByQna" resultMap="attachedFileMap">
      select
      qnafno,
        filepath,
      qnano
      from
        qna
      where
      qnano = #{value}
  </select>

  <insert id="insert" parameterType="qna"
          useGeneratedKeys="true" keyColumn="qnano" keyProperty="no">
    insert into qna(title,cont,mno,qnacno)
    values(#{title},#{content},#{writer.no},#{category.no})
  </insert>

  <update id="update" parameterType="qna">
    update qna set
      title=#{title},
      cont=#{content},
      qnacno=#{category.no}
    where qnano=#{no}
  </update>

  <update id="answerUpdate" parameterType="qna">
    update qna set
    answer=#{answer},
    answercdt=now()
    where qnano=#{no}
  </update>

  <!-- 이 쿼리문 됨..-->
  <delete id="delete">
    delete from qna
    where qnano=#{value}
  </delete>

<!--  <delete id="deleteByMember">-->
<!--    delete from app_board -->
<!--    where mno=#{value}-->
<!--  </delete>-->

  <insert id="insertFiles" parameterType="qna">
    insert into qna_file(fname, fpath, qnano)
    values
    <foreach collection="attachedFiles" item="file" separator=",">
      (#{file.filename},#{file.filepath},#{no})
    </foreach>
  </insert>

  <!-- 이 쿼리문 됨..-->
  <delete id="deleteFiles">
    delete from qna_file
    where qnano=#{value}
  </delete>

<!--  <delete id="deleteFilesByMemberBoards">-->
<!--    delete from qna_file-->
<!--    where qnano in (select qnano from qna where mno = #{value})-->
<!--  </delete>-->

  <!-- 이 쿼리문 됨..-->
  <delete id="deleteFile">
    delete from qna_file
    where qnafno=#{value}
  </delete>

  <!-- 이 쿼리문 됨..-->
  <select id="findFileByNo" resultMap="attachedFileMap">
    select
      qnafno,
      fpath,
      qnano,
      fname
    from
      qna_file
      where
    qnafno=#{value}
  </select>
</mapper>




