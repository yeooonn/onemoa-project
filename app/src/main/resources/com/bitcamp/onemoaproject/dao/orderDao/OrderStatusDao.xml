<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bitcamp.onemoaproject.dao.orderDao.OrderStatusDao">

  <resultMap type="orderStatus" id="orderStatusMap">
      <id column="scno" property="no"/>
      <result column="name" property="name"/>
  </resultMap>

  <select id="findAll" resultMap="orderStatusMap">
    select
      scno,
      name
    from
      order_status
  </select>

  <select id="findByNo" resultMap="orderStatusMap">
    select
      scno,
      name
    from
      order_status
    where
      scno=#{value}
  </select>
</mapper>